{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.17.0",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["npm install --legacy-peer-deps"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npx serve -s build",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}