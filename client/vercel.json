{
  "version": 2,
  "builds": [
    { "src": "server/app.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/app.js",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    },
    { 
      "src": "/uploads/(.*)", 
      "dest": "/server/uploads/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/build/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/build/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "5000",
    "MONGO_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_secret",
    "JWT_EXPIRE": "30d",
    "CORS_ORIGIN": "https://collider-cluster.vercel.app",
    "MAX_FILE_UPLOAD": "5242880",
    "FILE_UPLOAD_PATH": "./uploads",
    "RATE_LIMIT_WINDOW": "15",
    "RATE_LIMIT_MAX": "100"
  }
}